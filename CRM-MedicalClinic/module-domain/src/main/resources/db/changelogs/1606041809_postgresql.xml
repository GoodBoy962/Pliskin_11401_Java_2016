<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1606041809_1" author="GoodBoy">
        <createTable tableName="doctors_specializations">
            <column name="doctor_id" type="bigint"/>
            <column name="specialization_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="1606041809_2" author="GoodBoy">
        <addForeignKeyConstraint baseTableName="doctors_specializations"
                                 baseColumnNames="doctor_id"
                                 constraintName="doctors_specializations_doctors_fk"
                                 referencedTableName="doctors"
                                 referencedColumnNames="id"
        />
    </changeSet>

    <changeSet id="1606041809_3" author="GoodBoy">
        <addForeignKeyConstraint baseTableName="doctors_specializations"
                                 baseColumnNames="specialization_id"
                                 constraintName="doctors_specializations_specializations_fk"
                                 referencedTableName="specializations"
                                 referencedColumnNames="id"
        />
    </changeSet>


</databaseChangeLog>